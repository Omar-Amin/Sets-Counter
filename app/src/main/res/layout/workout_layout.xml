<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:id="@+id/workoutLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workout_name"
        android:textColor="#f66"
        android:textSize="28sp"
        android:textAllCaps="false"
        android:background="@drawable/add_workout"
        android:layout_centerHorizontal="true"
        android:id="@+id/workoutListName"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/deleteWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="#00FFFFFF"
        android:src="@drawable/delete"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/deletes_workout" />

    <ImageButton
        android:id="@+id/editWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="#00FFFFFF"
        android:src="@drawable/edit"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/deleteWorkout"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/deletes_workout"
        android:layout_toStartOf="@id/deleteWorkout" />

</RelativeLayout>