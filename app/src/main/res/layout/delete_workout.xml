<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <TextView
        android:id="@+id/workoutDeleteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:text="@string/are_you_sure_you_want_to_delete_it"
        android:textAlignment="center"
        android:textColor="#5C5C5C"
        android:textSize="19sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/workoutDeleteText"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/deleteWorkoutPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/cancelDeletion"
            android:layout_toRightOf="@id/cancelDeletion"
            android:background="@drawable/save"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelDeletion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#00FFFFFF"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#f66"
            android:textStyle="bold" />

    </RelativeLayout>



</RelativeLayout>